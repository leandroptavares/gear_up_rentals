<div class="container">
<h1><%= @item.title %></h1>
  <div class="row">
    <!-- Details Section -->
    <div class="col-md-8 details">
      <div>
        <p><% if @item.image_url.present? %>
          <%= image_tag @item.image_url, class: "img-fluid" %>
        <% end %>
      </div></p>
      <h3>Description:</h3>
      <p><%= @item.description %></p>
      <p class="card-text">Renter: <%= @item.user.username %></p>
    </div>

    <!-- Booking Section -->
    <div class="col-md-4 booking">
      <% if current_user %>
        <%= render "bookings/new" %>
      <% else %>
        <h2>Interested on this item?</h2>
        <%= link_to "Sign in", user_session_path%>
      <% end %>
    </div>
  </div>
    <h3 class="mt-3">Reviews:</h3>
    <%= render "shared/reviews" %>
</div>
