<div class="d-flex justify-content-center">
  <div class="container">
    <div class="cards">
      <% @items.each do |item| %>
       <%=link_to item_path(item) do%>
          <div class="card border border-0" style="width: 18rem;">
            <img class="card-img-top rounded-4" src="<%= item.image_url %>" alt="<%= item.title %>" height="300" width="180" style="object-fit: cover;">
            <div class="card-body ">
              <h5 class="card-title"><%= item.title.capitalize %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= item.category %></h6>
              <p class="card-text"><strong>$<%= item.price %></strong> per day</p>

            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

