    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <a class="navbar-brand" href="/">
        <img src="https://cdn.worldvectorlogo.com/logos/sports.svg" />
      </a>

      <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search..." />
          <button name="button" type="submit" class="btn btn-flat search-icon-button">
